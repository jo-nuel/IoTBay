<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
      version="3.1">
  <servlet>
    <servlet-name>ConnServlet</servlet-name>
    <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>AddCustomerServlet</servlet-name>
    <servlet-class>uts.isd.controller.AddCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddPaymentServlet</servlet-name>
    <servlet-class>uts.isd.controller.AddPaymentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CustomerManagementServlet</servlet-name>
    <servlet-class>uts.isd.controller.CustomerManagementServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <servlet-class>uts.isd.controller.DeleteCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeletePaymentServlet</servlet-name>
    <servlet-class>uts.isd.controller.DeletePaymentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MakePaymentServlet</servlet-name>
    <servlet-class>uts.isd.controller.MakePaymentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <servlet-class>uts.isd.controller.UpdateCustomerServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdatePaymentServlet</servlet-name>
    <servlet-class>uts.isd.controller.UpdatePaymentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ViewPaymentHistoryServlet</servlet-name>
    <servlet-class>uts.isd.controller.ViewPaymentHistoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddCustomerServlet</servlet-name>
    <url-pattern>/AddCustomerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddPaymentServlet</servlet-name>
    <url-pattern>/AddPaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CustomerManagementServlet</servlet-name>
    <url-pattern>/CustomerManagementServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteCustomerServlet</servlet-name>
    <url-pattern>/DeleteCustomerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeletePaymentServlet</servlet-name>
    <url-pattern>/DeletePaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MakePaymentServlet</servlet-name>
    <url-pattern>/MakePaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateCustomerServlet</servlet-name>
    <url-pattern>/UpdateCustomerServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdatePaymentServlet</servlet-name>
    <url-pattern>/UpdatePaymentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewPaymentHistoryServlet</servlet-name>
    <url-pattern>/ViewPaymentHistoryServlet</url-pattern>
  </servlet-mapping>
</web-app>

<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
      version="3.1">
  <servlet>
    <servlet-name>ConnServlet</servlet-name>
    <servlet-class>uts.isd.controller.ConnServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>uts.isd.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddSupplierServlet</servlet-name>
    <servlet-class>uts.isd.controller.AddSupplierServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SupplierManagementServlet</servlet-name>
    <servlet-class>uts.isd.controller.SupplierManagementServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeleteSupplierServlet</servlet-name>
    <servlet-class>uts.isd.controller.DeleteSupplierServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ChangeSupplierServlet</servlet-name>
    <servlet-class>uts.isd.controller.ChangeSupplierServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UpdateSupplierServlet</servlet-name>
    <servlet-class>uts.isd.controller.UpdateSupplierServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConnServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddSupplierServlet</servlet-name>
    <url-pattern>/AddSupplierServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SupplierManagementServlet</servlet-name>
    <url-pattern>/SupplierManagementServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeleteSupplierServlet</servlet-name>
    <url-pattern>/DeleteSupplierServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ChangeSupplierServlet</servlet-name>
    <url-pattern>/ChangeSupplierServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UpdateSupplierServlet</servlet-name>
    <url-pattern>/UpdateSupplierServlet</url-pattern>
  </servlet-mapping>
</web-app>
